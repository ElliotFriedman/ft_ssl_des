OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	@ar rc $(NAME) $(OBJ)
	@ranlib $(NAME)

clean:
	$(TRASH) $(OBJ)

fclean: clean
	$(TRASH) $(NAME)

re: fclean all
